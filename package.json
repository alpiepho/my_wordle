{
  "name": "app-wordle",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "description": "My Wordle - A Wordle clone PWA. Guess a 5-letter word in 6 tries. Daily and unlimited modes. Works offline.",
  "keywords": [
    "wordle",
    "word-game",
    "puzzle",
    "pwa",
    "my-wordle"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "predeploy": "npm run build && npm version patch --no-git-tag-version",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.1",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^3.2.1"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "vite-plugin-pwa": "^1.2.0"
  }
}
